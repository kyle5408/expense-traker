{{!-- Dropdowns --}}
<div class="container">
  <div class="col-auto mr-auto">
    <select class="form-select form-select-lg mb-3" aria-label=".form-select-lg example" style="width: 80%">
      <option>類別</option>
      {{#each categories}}
      <option>{{ this.name }}</option>
      {{/each}}
    </select>
  </div>

  <div class="mt-3 d-flex justify-content-start">
    <div class="" style=" font-weight: bold;font-size: 40px">
      總金額：
    </div>
    <div class="ml-3 text-align-center" style=" color: orange; font-weight: bold; font-size: 120px ">
      {{totalAmount}}
    </div>

  </div>




  <div class="mt-3">

    {{#each records}}
    <div class="d-flex justify-content-between">
      <div class="container">
        <ul class="list-group">
          <li class="list-group-item">
            <div class=" d-flex align-items-center">
              <div class="col-2 " style="padding:0">
                <i class="{{ this.icon }}" style="font-size:40px;color:lightblue"></i>
              </div>

              <div class="align-items-center">
                <h4 style="align-items: center;  font-weight:bold">
                  {{ this.name }}
                </h4>
                <p>
                  {{ this.date }}
                </p>
              </div>
              <div class="ml-5" style="flex: 1;text-align: right">
                <div style="font-size:30px; font-weight:bold">{{ this.amount }}</div>
              </div>
            </div>



          </li>
        </ul>
      </div>


      <div class="d-flex align-items-center">
        <form action="./records/{{ this._id }}/edit">
          <button class="btn btn-success">
            edit
          </button>
        </form>

        <form action="./records/{{ this._id }}?_method=DELETE" method="POST" style="display: inline;">
          <button class="btn btn-danger" type="submit">delete</button>
        </form>
      </div>
    </div>

    {{/each}}

  </div>

  {{!-- 控制List顏色 --}}
  <script>
    const list = document.querySelectorAll('li')
    for (let i = 0; i < list.length; i++) {
      if (i % 2 === 1) {
        list[i].style.background = "#E0E0E0"
      }
    }
  </script>